{
  "metadata": {
    "schemaVersion": "1.0",
    "importType": "LEX",
    "importFormat": "JSON"
  },
  "resource": {
    "name": "CentralPoint",
    "version": "1",
    "intents": [
      {
        "name": "AddPainLevel",
        "version": "2",
        "fulfillmentActivity": {
          "type": "ReturnIntent"
        },
        "sampleUtterances": [
          "add pain level at {painLevel}",
          "today my pain is at {painLevel}"
        ],
        "slots": [
          {
            "sampleUtterances": [
              "today my pain is at {painLevel}",
              "add pain level at {painLevel}"
            ],
            "slotType": "AMAZON.NUMBER",
            "obfuscationSetting": "NONE",
            "slotConstraint": "Required",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "What level?"
                }
              ],
              "responseCard": "{\"version\":1,\"contentType\":\"application/vnd.amazonaws.card.generic\"}",
              "maxAttempts": 2
            },
            "priority": 1,
            "name": "painLevel"
          }
        ]
      }
    ],
    "voiceId": "Emma",
    "childDirected": false,
    "locale": "en-GB",
    "idleSessionTTLInSeconds": 300,
    "clarificationPrompt": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, can you please repeat that?"
        }
      ],
      "maxAttempts": 5
    },
    "abortStatement": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, I could not understand. Goodbye."
        }
      ]
    },
    "detectSentiment": false,
    "enableModelImprovements": true
  }
}